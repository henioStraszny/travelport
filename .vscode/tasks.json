{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "tsc:watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "type": "npm",
            "script": "debug",
            "problemMatcher": [
                "$eslint-compact"
            ]
        }
    ]
}